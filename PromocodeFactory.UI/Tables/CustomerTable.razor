@if (Customers.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                
                <th scope="col">Имя</th>
                <th scope="col">Фамилия</th>
                <th scope="col">Email</th>
                <th scope="col">Действия</th>
                <th scope="col">Действия</th>
                <th scope="col">Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Customers)
            {
                <tr>
                    
                    <td class="align-middle">
                        @customer.FirstName
                    </td>
                    <td class="align-middle">
                        @customer.LastName
                    </td>
                    <td class="align-middle">
                        @customer.Email
                    </td>
                    <td class="align-middle">
                        <button type="button" class="btn btn-info" @onclick="(()=>GetCustomer(customer.CustomerId))">Посмотреть</button>
                    </td>
                    <td class="align-middle">
                        <button type="button" class="btn btn-info" @onclick="()=>UpdateCustomer(customer.CustomerId)">Редактировать</button>
                    </td>
                    <td class="align-middle">
                        <button type="button" class="btn btn-danger" @onclick="()=>Delete(customer.CustomerId)">Удалить</button>
                    </td>
                </tr>
             }
            </tbody>
    </table>
}
else
{
    <span>
        Идет загрузка клиентов...
    </span>
}

