@if (Preferences.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                
                <th scope="col">Название</th>
                <th scope="col">Действия</th>
                <th scope="col">Действия</th>
                <th scope="col">Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var preference in Preferences)
            {
                <tr>
                    
                    <td class="align-middle">
                        @preference.Name
                    </td>
                    <td class="align-middle">
                        <button type="button" class="btn btn-info" @onclick="(()=>GetPreference(preference.PreferenceId))">Посмотреть</button>
                    </td>
                    <td class="align-middle">
                        <button type="button" class="btn btn-info" @onclick="()=>UpdatePreference(preference.PreferenceId)">Редактировать</button>
                    </td>
                    <td class="align-middle">
                        <button type="button" class="btn btn-danger" @onclick="()=>Delete(preference.PreferenceId)">Удалить</button>
                    </td>
                </tr>
             }
            </tbody>
    </table>
}
else
{
    <span>
        Идет загрузка предпочтений...
    </span>
}

