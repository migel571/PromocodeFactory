@if (Employees.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                
                <th scope="col">Имя</th>
                <th scope="col">Фамилия</th>
                <th scope="col">Email</th>
                <th scope="col">Действия</th>
                <th scope="col">Действия</th>
                <th scope="col">Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Employees)
            {
                <tr>
                    
                    <td class="align-middle">
                        @employee.FirstName
                    </td>
                    <td class="align-middle">
                        @employee.LastName
                    </td>
                    <td class="align-middle">
                        @employee.Email
                    </td>
                    <td class="align-middle">
                        <button type="button" class="btn btn-info" @onclick="(()=>GetEmployee(employee.EmployeeId))">Посмотреть</button>
                    </td>
                    <td class="align-middle">
                        <button type="button" class="btn btn-info">Обновить</button>
                    </td>
                    <td class="align-middle">
                        <button type="button" class="btn btn-danger">Удалить</button>
                    </td>
                </tr>
             }
            </tbody>
    </table>
}
else
{
    <span>
        Идет загрузка сотрдников...
    </span>
}

