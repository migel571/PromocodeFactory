@if (Partner != null)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Имя</th>
                <th scope="col">Кол-во промокодов</th>
                <th scope="col">Действующий</th>
                <th scope="col">Действия</th>
                <th scope="col">Действия</th>
                
            </tr>
        </thead>
        <tbody>

            <tr>
                <td class="align-middle">
                    @Partner.PartnerId
                </td>
                <td class="align-middle">
                    @Partner.Name
                </td>
                <td class="align-middle">
                    @Partner.NumberIssuedPromoCode
                </td>
                <td class="align-middle">
                    @if (Partner.IsActive)
                    {
                        <p>Действующий</p>
                    }
                    else
                    {
                        <p style="color:red">Не действующий</p>
                    }
                </td>
                <td class="align-middle">
                    <button type="button" class="btn btn-info" @onclick="()=>UpdatePartner(Partner.PartnerId)">Редактировать</button>
                </td>
                <td class="align-middle">
                    <button type="button" class="btn btn-danger" @onclick="()=>Delete(Partner.PartnerId)">Удалить</button>
                </td>
            </tr>

        </tbody>
    </table>
}
else
{
    <span>
        Идет загрузка парнтера...
    </span>
}
