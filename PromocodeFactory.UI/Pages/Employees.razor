@page "/employees"
@using PromocodeFactory.UI.Tables
@using PromocodeFactory.UI.Components

<h3>Сотрудники</h3>

<div class="row">
    <div class="col-md-10">
        <Search OnSearchChanged="SearchChanged"/>
    </div>
    <div class="col-md-2">
        <a href="/createEmployee">Создать сотрудника</a>
    </div>
</div>
<div class="row">
    <div class="col">
        <EmployeeTable Employees="EmployeesList" OnDelete="DeleteEmployee"></EmployeeTable>
    </div>
</div>
<div class="row">
    <div class="col">
        <Pagination MetaData ="MetaData" Spread ="2" SelectedPage="SelectedPage"></Pagination>
    </div>
</div>

